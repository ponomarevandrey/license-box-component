block head
  style. 
    
    body { background-color: #eee; }
    
    .demo {
      display: grid;
      grid-row-gap: 1rem;
      padding: 3rem 3vw 3rem 3vw;
      grid-template-columns: minmax(0, 1fr);
      justify-content: center;  
      justify-items: center;
    }
    
    .block {
      display: flex;
      flex-flow: column nowrap;        
      padding: 1rem;
      border-radius: .3rem;
      background-color: white;
      box-sizing: border-box;
      width: 100%;
    }
    
    .block__header {
      overflow: hidden;      
      display: flex;
      flex-flow: row wrap;
      justify-content: space-between;
      align-items: center;
    }
  
    .block__header .icons {
      margin-bottom: .5rem;
    }
    
    .block__example {
      display: flex;
      flex-flow: column nowrap;
      padding: 1rem 0 0 0;
      align-items: flex-start;
    }

    .block__example > * {

    }

    .block__description {
      padding-bottom: 1rem;
    }    
    

    /* Large screen layout */  

    @media screen and (min-width: 768px) {
      .demo {
        grid-gap: 2rem;
        padding: 5rem 2rem 5rem 2rem;
        grid-template-columns: repeat(auto-fill, minmax(750px, 1fr));
        align-items: flex-start;
        grid-auto-flow: row;
        grid-auto-columns: minmax(750px, 1fr);
      }
      
      .block__example {
        display: flex;
        flex-flow: column nowrap;
        padding: 2rem;
      }

      .block__header {
        padding: 3rem 2rem 0 2rem;
        display: flex;
        flex-flow: row wrap;
        justify-content: space-between;

      }

      .block__description {
        padding: 0rem 2rem 2rem 2rem;
      }

      .block__table { padding: 0rem 2rem 2rem 2rem; }
      .block__col1 { width: 20%; }
      .block__col2 { width: 30%; }
      .block__col3 { width: 40%; }

      .block__icons a { padding: 1rem; }
    
    } 
    
    /* Header */ 
    
    .promo {
      display: flex;
      align-items: flex-start;
      justify-content: center;
      position: relative;
      background-color: white;
      align-content: flex-start;
      height: 100%;    
    }

    @media screen and (min-width: 480px) {
      .promo {
          align-items: center;
          justify-content: center;
        }
    }

    .promo__presentation {
      display: grid;
      grid-gap: 1rem;
      width: 30rem;
      height: calc(98%-2rem);
      padding: 1rem 1rem 5rem 1rem;
      grid-template-rows: auto 1fr auto;
      align-content: center;
    }


    @media screen and (min-width: 480px) {
      .promo__presentation {
        height: auto;
      }
    }

    .promo__heading {
      font-size: calc(2.441rem - 100%);
      align-self: flex-start;
    }
      
    @media screen and (min-width: 480px) {
      .promo__heading {
        font-size: 1.953rem;
        line-height: 1.2;
      }
    }

    .promo__logo {
      max-width: 70%;
    }

    .promo__buttons {
      position: relative;
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(145px, 1fr));
      grid-gap: 1rem;
    }
  

    .hamburger-menu {
      display: inline-block;
    }

    @media screen and (min-width: 480px) {
     .hamburger-menu {
        display: none;
      }
    }



